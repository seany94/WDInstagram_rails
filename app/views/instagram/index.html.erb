<h1>Listing all instagram posts</h1>

<table>
  <tr>
    <th>Post ID</th>
    <th>Name</th>
    <th>Photo</th>
    <th>Caption</th>
    <th></th>
  </tr>

<%= form_tag("/", method: "get") do %>
	<%= select_tag(:post, options_for_select([['Name Ascending', 1], ['ID Ascending', 2], ['Most recent created date', 3],['Most recent updated date', 4]])) %>
	<%= submit_tag("Search") %>
<% end %>
